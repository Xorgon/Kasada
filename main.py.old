import pygame
import util.objutils

class Kasada():
    
    disp_x = 1080
    disp_y = 650
    size_fact = 0.02
        
    
    def __init__(self):
        pygame.init()
        
        
        screen = pygame.display.set_mode((self.disp_x, self.disp_y), pygame.RESIZABLE)
        
        done = False
        
        is_blue = True
        p_x = 30
        p_y = 30
        
        image = pygame.image.load('images/basechar.png')
        image = util.objutils.resize(self.disp_x * self.size_fact, image)
        
        clock = pygame.time.Clock()
        
        draw_group = pygame.sprite.RenderUpdates()
    
    def run(self):    
        while not done:
            screen.fill((0, 0, 0))
        
            for event in pygame.event.get():
                if event.type == pygame.QUIT:
                    done = True
                if event.type == pygame.VIDEORESIZE:
                    disp_x = event.size[0]
                    disp_y = event.size[1]
                    pygame.display.set_mode(event.size, pygame.RESIZABLE)
                    image = pygame.image.load('images/basechar.png')
                    image = util.objutils.resize(disp_x * 0.02, image)
                if event.type == pygame.KEYDOWN:
                    is_blue = not is_blue
                if event.type == pygame.KEYUP:
                    is_blue = not is_blue
        
            pressed = pygame.key.get_pressed()
            if pressed[pygame.K_UP]: p_y -= 3
            if pressed[pygame.K_DOWN]: p_y += 3
            if pressed[pygame.K_LEFT]: p_x -= 3
            if pressed[pygame.K_RIGHT]: p_x += 3
        
            if is_blue:
                color = (0, 128, 255)
            else:
                color = (255, 100, 0)
        
            screen.blit(image, (disp_x/2.0, disp_y/2.0))
        
            pygame.display.flip()
        
            clock.tick(120)
